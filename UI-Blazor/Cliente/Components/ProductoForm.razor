@using UI_Blazor.Client.Models
@using UI_Blazor.Client.Services
@using Microsoft.AspNetCore.Components

<div class="producto-form-container">
    <form class="producto-form" @onsubmit="HandleSubmit" @onsubmit:preventDefault>
        <h3 class="form-section-title">Detalle del producto / servicio</h3>

        <!-- Caracter铆sticas Generales -->
        <div class="form-section-box">
            <h4 class="section-subtitle">Informaci贸n del Producto</h4>
            
            <div class="form-grid">
                <div class="form-column-left">
                    <!-- rea para imagen/logo del producto -->
                    <div class="product-image-placeholder">
                        <div class="image-icon"></div>
                        <p>Imagen del producto</p>
                    </div>
                </div>
                
                <div class="form-column-right">
                    <div class="form-row-inline">
                        <div class="form-group">
                            <label>Tipo de Producto *</label>
                            <input type="text" 
                                   class="form-control" 
                                   @bind="Producto.Tip_Pro" 
                                   placeholder="Ej: Alimenticio, Bebida, Limpieza..."
                                   required />
                        </div>
                    </div>

                    <div class="form-row-inline">
                        <div class="form-group">
                            <label>Nombre del Producto *</label>
                            <input type="text" 
                                   class="form-control wide-input" 
                                   @bind="Producto.Nom_Pro" 
                                   placeholder="Ej: Coca Cola 750ml"
                                   required />
                        </div>
                    </div>

                    <div class="form-row-inline">
                        <div class="form-group">
                            <label>Marca *</label>
                            <input type="text" 
                                   class="form-control" 
                                   @bind="Producto.Marca" 
                                   placeholder="Ej: Coca Cola Company"
                                   required />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informaci贸n de Lotes y Precios -->
        <div class="form-section-box lote-section">
            <h4 class="section-subtitle">
                 Informaci贸n de Precios y Lotes
                <span class="info-badge">Tabla separada: lotes</span>
            </h4>
            
            <div class="form-grid-2col">
                <div class="form-group">
                    <label>Fecha de Entrada</label>
                    <input type="date" 
                           class="form-control" 
                           @bind="LoteInfo.Fec_Ent" />
                    <small class="form-hint">Fecha de recepci贸n del lote</small>
                </div>

                <div class="form-group">
                    <label>Fecha de Expiraci贸n</label>
                    <input type="date" 
                           class="form-control" 
                           @bind="LoteInfo.Fec_Exp" />
                    <small class="form-hint">Fecha de vencimiento del producto</small>
                </div>

                <div class="form-group">
                    <label>Cantidad Recibida</label>
                    <input type="number" 
                           class="form-control" 
                           @bind="LoteInfo.Cantidad_Recibida" 
                           placeholder="Ej: 100"
                           min="1" />
                    <small class="form-hint">Unidades recibidas en el lote</small>
                </div>

                <div class="form-group">
                    <label>Cantidad Disponible</label>
                    <input type="number" 
                           class="form-control" 
                           @bind="LoteInfo.Cantidad_Disponible" 
                           placeholder="Ej: 100"
                           min="0" />
                    <small class="form-hint">Unidades actualmente disponibles</small>
                </div>

                <div class="form-group">
                    <label>Precio Unitario (USD)</label>
                    <input type="number" 
                           class="form-control" 
                           @bind="LoteInfo.Precio_Unitario" 
                           placeholder="0.00"
                           step="0.01"
                           min="0" />
                    <small class="form-hint">Precio por unidad individual</small>
                </div>
            </div>

            <div class="lote-info-display">
                <div class="calculated-info">
                    <span class="info-label">Precio Total del Lote:</span>
                    <span class="info-value">
                        $@LoteInfo.Precio_Lote.ToString("N2")
                    </span>
                </div>
            </div>
        </div>

        <!-- Botones de acci贸n -->
        <div class="form-actions">
            <button type="submit" class="btn btn-guardar">Guardar Producto</button>
            <button type="button" class="btn btn-cancelar" @onclick="() => OnCancelar.InvokeAsync()">Cancelar</button>
        </div>
    </form>
</div>

<style>
    .lote-section {
        background: linear-gradient(135deg, #f8f9ff 0%, #fff5f5 100%);
        border-left: 4px solid #6366f1;
        margin-top: 1.5rem;
    }

    .info-badge {
        font-size: 0.75rem;
        background: #6366f1;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        margin-left: 1rem;
        font-weight: 500;
    }

    .form-grid-2col {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-top: 1rem;
    }

    .form-hint {
        display: block;
        font-size: 0.75rem;
        color: #6b7280;
        margin-top: 0.25rem;
        font-style: italic;
    }

    .lote-info-display {
        margin-top: 1.5rem;
        padding: 1rem;
        background: white;
        border-radius: 8px;
        border: 2px dashed #6366f1;
    }

    .calculated-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .info-label {
        font-weight: 600;
        color: #374151;
    }

    .info-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #6366f1;
    }

    @@media (max-width: 768px) {
        .form-grid-2col {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    [Parameter]
    public Producto Producto { get; set; } = new();

    [Parameter]
    public EventCallback OnGuardar { get; set; }

    [Parameter]
    public EventCallback OnCancelar { get; set; }

    // Informaci贸n del lote (solo visual, se guardar谩 separadamente)
    private Lote LoteInfo { get; set; } = new();

    private async Task HandleSubmit()
    {
        // Validar que los campos requeridos est茅n completos
        if (string.IsNullOrWhiteSpace(Producto.Tip_Pro))
        {
            return;
        }

        if (string.IsNullOrWhiteSpace(Producto.Nom_Pro))
        {
            return;
        }

        if (string.IsNullOrWhiteSpace(Producto.Marca))
        {
            return;
        }

        await OnGuardar.InvokeAsync();
    }
}