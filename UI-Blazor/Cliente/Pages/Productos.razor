@page "/productos"
@page "/productos/lista"
@attribute [Authorize]
@using UI_Blazor.Client.Models
@using UI_Blazor.Client.Services
@using Cliente.Components
@inject IProductoService ProductoService
@inject NavigationManager NavigationManager

<PageTitle>Productos | Dashboard</PageTitle>

<div class="productos-page">
    <!-- Header -->
    <div class="page-header">
        <div class="header-title-section">
            <h2 class="page-title">Gestión de Productos</h2>
            <p class="page-subtitle">Administra tu catálogo de productos y servicios</p>
        </div>
    </div>

    <!-- Navegación por pestañas -->
    <div class="tabs-navigation">
        <button class="tab-btn @(currentView == "lista" ? "active" : "")" @onclick='() => ChangeView("lista")'>
            Lista General
        </button>
        <button class="tab-btn @(currentView == "nuevo" ? "active" : "")" @onclick='() => ChangeView("nuevo")'>
            Nuevo Producto
        </button>
    </div>

    <!-- Contenido condicional según la vista -->
    @if (currentView == "lista")
    {
    <!-- Barra de búsqueda -->
    <div class="search-filter-bar">
        <div class="search-box">
            <input type="text" 
                   class="search-input" 
                   placeholder="Buscar por nombre, tipo o marca..."
                   @bind="searchTerm"
                   @bind:event="oninput"
                   @bind:after="ApplyFilters" />
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <button class="clear-btn" @onclick="ClearSearch">×</button>
            }
        </div>
    </div>

    <!-- Tabla de productos -->
    <div class="productos-table-container">
        <table class="productos-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Marca</th>
                    <th>Stock</th>
                    <th>Lotes</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!productosFiltrados.Any())
                {
                    <tr>
                        <td colspan="7" class="no-data">
                            <div class="empty-state">
                                <p>No se encontraron productos</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var producto in productosFiltrados)
                    {
                        <tr>
                            <td><strong>@producto.Id_Pro</strong></td>
                            <td><strong>@producto.Nom_Pro</strong></td>
                            <td>
                                <span class="tipo-badge">@producto.Tip_Pro</span>
                            </td>
                            <td>@producto.Marca</td>
                            <td>
                                <span class="stock-badge @(producto.StockTotal < 10 ? "low-stock" : "")">
                                    @producto.StockTotal unidades
                                </span>
                            </td>
                            <td>
                                <span class="lote-count">@producto.NumLotes</span>
                            </td>
                            <td class="actions-col">
                                <button class="action-btn-icon view" @onclick="() => VerProducto(producto.Id_Pro)" title="Ver">Ver</button>
                                <button class="action-btn-icon edit" @onclick="() => EditarProducto(producto.Id_Pro)" title="Editar">Editar</button>
                                <button class="action-btn-icon delete" @onclick="() => EliminarProducto(producto.Id_Pro)" title="Eliminar">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <!-- Paginación -->
        @if (productosFiltrados.Any())
        {
            <div class="pagination-section">
                <div class="pagination-info">
                    Mostrando <strong>@productosFiltrados.Count</strong> de <strong>@productos.Count</strong> productos
                </div>
            </div>
        }
    </div>
    }
    else if (currentView == "nuevo")
    {
        <div class="content-section">
            <div class="form-container">
                <div class="form-header">
                    <h3 class="form-title">Nuevo Producto</h3>
                    <p class="form-subtitle">Complete la información del producto</p>
                </div>

                <ProductoForm Producto="productoActual" OnGuardar="GuardarProducto" OnCancelar='() => ChangeView("lista")' />
            </div>
        </div>
    }
</div>

@code {
    private List<Producto> productos = new();
    private List<Producto> productosFiltrados = new();
    private string searchTerm = string.Empty;
    private string currentView = "lista";
    private Producto productoActual = new();

    protected override async Task OnInitializedAsync()
    {
        productos = await ProductoService.GetProductosAsync();
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        var filtered = productos.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            filtered = filtered.Where(p =>
                p.Nom_Pro.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Tip_Pro.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Marca.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
        }

        productosFiltrados = filtered.ToList();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        ApplyFilters();
    }

    private void ChangeView(string view)
    {
        currentView = view;
        if (view == "nuevo")
        {
            productoActual = new Producto();
        }
    }

    private async Task GuardarProducto()
    {
        if (productoActual.Id_Pro == 0)
        {
            await ProductoService.CreateProductoAsync(productoActual);
        }
        else
        {
            await ProductoService.UpdateProductoAsync(productoActual);
        }
        
        productos = await ProductoService.GetProductosAsync();
        ApplyFilters();
        ChangeView("lista");
    }

    private void VerProducto(int id)
    {
        Console.WriteLine($"Ver producto: {id}");
    }

    private async Task EditarProducto(int id)
    {
        var producto = await ProductoService.GetProductoByIdAsync(id);
        if (producto != null)
        {
            productoActual = producto;
            currentView = "nuevo";
        }
    }

    private async Task EliminarProducto(int id)
    {
        await ProductoService.DeleteProductoAsync(id);
        productos = await ProductoService.GetProductosAsync();
        ApplyFilters();
    }
}